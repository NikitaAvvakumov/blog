<% provide(:title, 'Bloggers') %>

<h1>The quoth bloggers:</h1>

<ul class="blogger-list">
<% @users.each do |user| %>
	<li><h2><%= user.name %></h2></li>
	<%= link_to 'View blogger page', user_path(user) %> &nbsp;&nbsp;
	  <% if signed_in? %>
		<%= link_to '', edit_user_path(user), class: 'glyphicon glyphicon-pencil', id: "#{user.name}_edit",
					title: 'Edit blogger info', rel: 'tooltip' %>
	    &nbsp;
		<%= link_to '', user, method: :delete, data: { confirm: "Delete #{user.name} from the system?" },
	                class: 'glyphicon glyphicon-trash text-danger', id: "#{user.name}_delete",
	                title: 'Delete blogger info', rel: 'tooltip' %>
	  <% end %>
<% end %>
</ul>